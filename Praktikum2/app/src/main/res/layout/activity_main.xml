<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/conversion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_height"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bmi"
            android:contentDescription="Ikon BMI" />

        <TextView
            android:id="@+id/title_converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hitung BMI Dan Konversi Tinggi Badan"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Masukkan Tinggi(CM):"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/input_tinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Contoh: 170"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Berat Badan (kg):"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_berat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:hint="Contoh: 65"
            android:inputType="numberDecimal"
            android:padding="12dp" />

        <Button
            android:id="@+id/hitung_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Hitung"
            android:padding="14dp" />

        <TextView
            android:id="@+id/hasil_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Hasil"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>